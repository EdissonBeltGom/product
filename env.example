# =============================================================================
# ARCHIVO DE EJEMPLO PARA VARIABLES DE ENTORNO
# =============================================================================
# Copia este archivo como .env y configura los valores reales
# NUNCA commitees el archivo .env real con secrets

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# API Key para autenticación de servicios externos
API_KEY=your-production-api-key-here

# Secret para firmar tokens JWT (debe ser muy largo y seguro)
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-very-long

# Tiempo de expiración del token en segundos (default: 1 hora)
TOKEN_EXPIRATION=3600

# Tiempo de expiración del refresh token en segundos (default: 7 días)
REFRESH_TOKEN_EXPIRATION=604800

# Algoritmo de firma JWT
JWT_ALGORITHM=HS256

# Issuer del token JWT
JWT_ISSUER=product-api

# Audience del token JWT
JWT_AUDIENCE=product-users

# =============================================================================
# CONFIGURACIÓN DE RATE LIMITING
# =============================================================================

# Número máximo de requests por minuto por IP
RATE_LIMIT_MAX_PER_MINUTE=100

# Número máximo de requests por hora por IP
RATE_LIMIT_MAX_PER_HOUR=1000

# Tiempo de bloqueo en segundos cuando se excede el límite
RATE_LIMIT_BLOCK_TIME=300

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================

# Orígenes permitidos para CORS (separados por coma)
CORS_ALLOWED_ORIGINS=https://product-app.com,https://www.product-app.com

# Métodos HTTP permitidos (separados por coma)
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS

# Headers permitidos
CORS_ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With

# Si se permiten credenciales
CORS_ALLOW_CREDENTIALS=true

# Tiempo máximo de cache para preflight requests
CORS_MAX_AGE=3600

# =============================================================================
# CONFIGURACIÓN DE SERVICIOS EXTERNOS
# =============================================================================

# Servicio de recomendación
RECOMMENDATION_SERVICE_URL=https://recommendation-service.production.com
RECOMMENDATION_API_KEY=your-recommendation-service-api-key
RECOMMENDATION_CONNECTION_TIMEOUT=5000
RECOMMENDATION_READ_TIMEOUT=10000
RECOMMENDATION_MAX_RETRIES=3
RECOMMENDATION_RETRY_DELAY=1000

# Servicio de análisis
ANALYTICS_SERVICE_URL=https://analytics-service.production.com
ANALYTICS_API_KEY=your-analytics-service-api-key
ANALYTICS_CONNECTION_TIMEOUT=3000
ANALYTICS_READ_TIMEOUT=5000
ANALYTICS_ENABLED=true

# Servicio de notificación
NOTIFICATION_SERVICE_URL=https://notification-service.production.com
NOTIFICATION_API_KEY=your-notification-service-api-key
NOTIFICATION_CONNECTION_TIMEOUT=2000
NOTIFICATION_READ_TIMEOUT=3000
NOTIFICATION_ENABLED=true

# =============================================================================
# CONFIGURACIÓN DE EMAIL
# =============================================================================

# Servidor SMTP
SMTP_HOST=smtp.gmail.com

# Puerto SMTP
SMTP_PORT=587

# Usuario SMTP
SMTP_USERNAME=noreply@yourcompany.com

# Contraseña SMTP
SMTP_PASSWORD=your-smtp-password-here

# Si usar TLS
SMTP_USE_TLS=true

# =============================================================================
# CONFIGURACIÓN DE SMS
# =============================================================================

# API Key del proveedor de SMS
SMS_API_KEY=your-sms-provider-api-key

# URL del servicio de SMS
SMS_SERVICE_URL=https://api.twilio.com

# Número de teléfono remitente
SMS_FROM_NUMBER=+1234567890

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS (si se agrega en el futuro)
# =============================================================================

# URL de la base de datos
DB_URL=jdbc:postgresql://localhost:5432/product_db

# Usuario de la base de datos
DB_USERNAME=product_user

# Contraseña de la base de datos
DB_PASSWORD=your-database-password-here

# =============================================================================
# CONFIGURACIÓN DE CACHE (si se agrega en el futuro)
# =============================================================================

# URL de Redis
REDIS_URL=redis://localhost:6379

# Contraseña de Redis
REDIS_PASSWORD=your-redis-password-here

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# URL del servicio de métricas
METRICS_SERVICE_URL=https://metrics-service.production.com

# API Key para métricas
METRICS_API_KEY=your-metrics-api-key

